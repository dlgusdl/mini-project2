<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.project.model.help.HelpRepository">
    <select id="findAll" resultType="shop.mtcoding.project.model.help.Help">
        select * from help_tb
    </select>

    <select id="findById" resultType="shop.mtcoding.project.model.help.Help">
        select * from help_tb where help_id = #{helpId}
    </select>

    <insert id="insert">
        insert into help_tb ( password, help_name, email, title, tel, created_at)
            values ( #{hDto.password}, #{hDto.help_name}, #{hDto.email}, #{hDto.title}, #{hDto.tel}, now());
    </insert>

    <delete id="deleteById">
        delete from help_tb where id = #{helpId}
    </delete>
</mapper>
   
